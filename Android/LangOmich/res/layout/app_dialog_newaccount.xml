<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="left">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/newaccount_text_login"/>
    <EditText
        android:id="@+id/newaccount_loginEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/newaccount_text_password"/>
    <EditText 
        android:id="@+id/newaccount_passwordEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"/>
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/newaccount_text_ok"
        android:layout_gravity="right"
        android:onClick="onNewAccountButtonOk"/>
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/newaccount_text_cancel"
		android:layout_gravity="right"
        android:onClick="onNewAccountButtonCancel"/>
</LinearLayout>