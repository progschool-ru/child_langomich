<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="left">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialogAddWordMain_Native"/>
    <EditText
        android:id="@+id/addword_nativEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialogAddWordMain_Foreign"/>
    <EditText 
        android:id="@+id/addword_foreignEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialogAddWordMain_Add"
        android:layout_gravity="right"
        android:onClick="onAddButton"/>

</LinearLayout>