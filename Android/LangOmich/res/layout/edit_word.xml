<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dip" >

    <TableRow >
    	<TextView
        	android:id="@+id/editW_tView_original"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/original" />

    	<EditText
    	    android:id="@+id/editW_tEdit_original"
    	    android:inputType="text"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content" >
    	</EditText>

	</TableRow>
	<TableRow>
    	<TextView
        	android:id="@+id/editW_tView_translation"
       		android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
        	android:text="@string/translation" />

    	<EditText
    	    android:id="@+id/editW_tEdit_translation"
    	    android:inputType="text"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content" />

    	</TableRow>
	
	<TableRow>

    	<TextView
        	android:id="@+id/editW_tView_rating"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/rating" />

    	<Spinner
    	    android:id="@+id/editW_spinner_rating"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content" />

	</TableRow>

	<TableRow
	    android:id="@+id/tableRow2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" >

		<TextView
		    android:id="@+id/editW_tView_error_report"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>

	</TableRow>
	
	<TableRow
	    android:id="@+id/tableRow1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" >

		<Button
		    android:id="@+id/editW_button_cancel"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/editW_cancel" />

		<Button
		    android:id="@+id/editW_button_save"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/editW_save" />

	</TableRow>

	

</TableLayout>